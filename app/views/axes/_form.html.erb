  </div>

  <div class="field">
    <%= form.label :y_offset %>
    <%= form.number_field :y_offset, class: "js-#{dom_id(axis)}-input js-input" %>
  </div>

  <div class="field">
    <%= form.label :hex_diameter %>
    <%= form.number_field :hex_diameter, class: "js-#{dom_id(axis)}-input js-input" %>
  </div>

  <div class="field">
    <%= form.label :map_width %>
    <%= form.number_field :map_width, class: "js-#{dom_id(axis)}-input js-input" %>
  </div>

  <div class="field">
    <%= form.label :map_height %>
    <%= form.number_field :map_height, class: "js-#{dom_id(axis)}-input js-input" %>
  </div>

  <div class="field">
    <%= form.label :dash_filled_length %>
