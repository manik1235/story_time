<%= form_with(model: axis, id: "#{dom_id(axis)}-form", class: "js-axis-form", data: { selector: "js-#{dom_id(axis)}" }) do |form| %>
  <% if axis.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(axis.errors.count, "error") %> prohibited this axis from being saved:</h2>

      <ul>
        <% axis.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name, class: "js-#{dom_id(axis)}-input js-input" %>
  </div>

